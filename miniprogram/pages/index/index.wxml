<!--index.wxml-->
<!-- header -->
<include src="../../components/layout/header/header.wxml"/>

<view class="container">

    <mp-cells title="文件列表" class="fill-width">
        <mp-cell wx:for="{{menu}}" wx:key="file_id" link hover 
        url="../code-view/code-view?file_id={{item.file_id}}" value="{{ item.file_name }}">
            <image class="cell-icon" slot="icon" src="../../images/index/language-{{item.language}}.png"></image>
        </mp-cell>
        
        <view class="more-area" data-type="create" data-index="{{index}}" bindtap="moreAction" hover-stop-propagation>
                <image src="/images/index/icon_more.png" mode="widthFix" class="icon-more"></image>
        </view>
    </mp-cells>

    <button class="add-button" hover-class="add-button-hover" bindtap="addFile">+</button>

</view>
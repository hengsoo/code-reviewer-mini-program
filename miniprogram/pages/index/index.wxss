/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.cell-icon{
  margin-right: 16px;
  vertical-align: middle;
  width:40px;
  height: 40px !important;
}

.add-button{
  position: fixed;
  bottom: 30px;
  right: 25px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 60px !important;
  height: 60px !important;
  border-radius: 30px;
  background: #673bb7;
  color: white;
  font-size: 40px;
  line-height: 0;
  padding: 0px 0px 5px 0px !important;
}

.add-button-hover{
  background: #663bb782;
}
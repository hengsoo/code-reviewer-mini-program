@import"../../components/prism.wxss";

page {
  height: 100%;
  background: #282923;
  color: white;
}

.code-container {
  overflow-x: scroll;
  height: 100%;
  margin: 15rpx 25rpx 0 0;
}

table {
  display: flex;
  flex-direction: column;
}

tr {
  display: inline-flex;
  flex-direction: row;
}

.head-col {
  position: sticky;
  left: 0;
  top: auto;
  min-width: 90rpx;
  border-top-width: 1px;
  /*only relevant for first row*/
  margin-top: -1px;
  /* background: #282923; */
  text-align: center;
  color: #8c8e8a;
  background: #282923;
  /*compensate for top border*/
}

.code {
  white-space: nowrap;
}

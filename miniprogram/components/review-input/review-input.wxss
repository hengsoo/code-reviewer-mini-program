@import '../prism.wxss';

.weui-mask,
.weui-half-screen-dialog {
	transition: all .3s
}

.weui-hidden .weui-mask {
	visibility: hidden;
	opacity: 0
}

.weui-hidden .weui-half-screen-dialog {
	transform: translateY(100%)
}

.weui-show .weui-mask {
	opacity: 1;
	visibility: visible
}

.weui-half-screen-dialog__hd__main{
  padding: 10rpx !important;
  margin-left: 35rpx;
}

.code{
  background: #282923;
  overflow: scroll;
  padding: 15rpx 0;
  overflow: scroll;
}

review-type-button {
  width: 120rpx;
  background: transparent;
  padding: 10rpx 12rpx;
  margin: 5rpx;
  font-size: 14px !important;
  border-radius: 15%;
  font-weight: 400;
  letter-spacing: 5rpx;
  border: 1px solid transparent
}

review-type-button.active{
  color:white;
}

.type-comment {
  color: #989aa6;
  border-color: #989aa6;
}
.type-comment.active{
  background: #989aa6;
}

.type-advice {
  color: #5bc3eb;
  border-color: #5bc3eb;
}
.type-advice.active{
  background: #5bc3eb;
}

.type-warning {
  color: #fa4949;
  border-color: #fa4949;
}
.type-warning.active{
  background: #fa4949;
}

.review-input{
  color: black;
  width: auto;
}